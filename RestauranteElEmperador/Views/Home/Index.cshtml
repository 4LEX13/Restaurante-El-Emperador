@{
    ViewData["RASTAURABTE"] = "El EMPERADOR";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table id="mitabla" class="table table-striped table-dark">
    <tehead>
        <tr>

            <th>
                clienteId
            </th>
            <th>
                nombreCliente
            </th>
            <th>
                apellidoCliente
            </th>
            <th>
                direccionCliente
            </th>
            <th>
                telefonoCliente
            </th>
            <th>
                platos
            </th>
        </tr>

    </tehead>

</table>

@section scripts{

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script>

        $(document).ready(function () {

            var tabla = $('#mitabla').DataTable({
                "ajax": {
                    "url": '/Home/GetAll',
                    "type": "get",
                    "datatype": "json"
                },

                "columns": [
                    { "data": "clienteId", "name": "clienteId", "autowidth": true },
                    { "data": "nombreCliente", "name": "nombreCliente", "autowidth": true }
                    { "data": "apellidoCliente", "name": "apellidoCliente", "autowidth": true }
                    { "data": "direccionCliente", "name": "direccionCliente", "autowidth": true }
                    { "data": "telefonoCliente", "name": "telefonoCliente", "autowidth": true }
                    { "data": "platos", "name": "platos", "autowidth": true }
                ]

            });

        });


    </script>

}